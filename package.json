{
  "name": "reviewflow",
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "test:health": "curl -s http://localhost:3000/health | jq . || curl -s http://localhost:3000/health",
    "test:webhook": "curl -X POST http://localhost:3000/webhooks/github -H 'Content-Type: application/json' -H 'X-GitHub-Event: pull_request' -d @test-webhook.json"
  },
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "@slack/bolt": "^3.17.1",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9"
  }
}

